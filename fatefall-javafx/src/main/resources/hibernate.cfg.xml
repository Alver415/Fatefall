<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
                <property name="connection.url">jdbc:hsqldb:hsql://localhost/scryclient</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.pool_size">2</property>

<!--        <mapping resource="Card.hbm.xml" />-->

        <mapping class="com.scryfall.api.models.Card" />
        <mapping class="com.scryfall.api.models.CardFace" />
        <mapping class="com.scryfall.api.models.RelatedCards" />
        <mapping class="com.scryfall.api.models.ImageUri" />
        <mapping class="com.scryfall.api.models.Legality" />
    </session-factory>
</hibernate-configuration>