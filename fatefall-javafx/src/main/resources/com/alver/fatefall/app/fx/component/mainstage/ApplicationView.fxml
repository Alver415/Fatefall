<?xml version="1.0" encoding="UTF-8"?>


<?import com.alver.fatefall.app.fx.component.mainstage.ApplicationView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<fx:root type="ApplicationView" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar>
			<Menu text="File">
				<MenuItem text="New Workspace" onAction="#openCreateCollectionDialog"/>
				<SeparatorMenuItem/>
				<MenuItem text="New Card" onAction="#createCard"/>
			</Menu>
			<Menu text="Edit">
				<MenuItem text="Preferences" onAction="#openPreferences"/>
			</Menu>
			<Menu text="Plugins" fx:id="pluginMenu"/>
		</MenuBar>
	</top>
	<left>
		<BorderPane>
			<top>
				<ToolBar>
					<Button styleClass="btn" onAction="#create"/>
					<Button styleClass="btn" onAction="#save"/>
					<Button styleClass="btn" onAction="#delete"/>
				</ToolBar>
			</top>
			<center>
				<ScrollPane fitToWidth="true" fitToHeight="true">
					<ListView fx:id="listView"/>
				</ScrollPane>
			</center>
		</BorderPane>
	</left>
	<center>
		<TabPane fx:id="tabPane" prefWidth="600"/>
	</center>
</fx:root>