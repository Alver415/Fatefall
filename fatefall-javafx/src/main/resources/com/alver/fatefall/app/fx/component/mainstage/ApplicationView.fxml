<?xml version="1.0" encoding="UTF-8"?>


<?import com.alver.fatefall.app.fx.component.mainstage.ApplicationView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root type="ApplicationView" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar>
			<Menu text="File">
				<MenuItem text="New Workspace" onAction="#openCreateCollectionDialog"/>
				<SeparatorMenuItem/>
				<MenuItem text="New Card" onAction="#createCard"/>
			</Menu>
			<Menu text="Edit">
				<MenuItem text="Preferences" onAction="#openPreferences"/>
			</Menu>
			<Menu text="Plugins" fx:id="pluginMenu"/>
		</MenuBar>
	</top>
	<left>
		<BorderPane>
			<top>
				<ToolBar >
					<Button styleClass="iconButton" onAction="#create">
						<graphic>
							<ImageView fitHeight="16" fitWidth="16">
								<Image url="@/com/alver/fatefall/app/create.png"/>
							</ImageView>
						</graphic>
					</Button>
					<Button styleClass="iconButton" onAction="#save">
					<graphic>
						<ImageView fitHeight="16" fitWidth="16">
							<Image url="@/com/alver/fatefall/app/save.png"/>
						</ImageView>
					</graphic>
				</Button>
					<Button styleClass="iconButton" onAction="#delete">
				<graphic>
					<ImageView fitHeight="16" fitWidth="16">
						<Image url="@/com/alver/fatefall/app/delete.png"/>
					</ImageView>
				</graphic>
			</Button>
				</ToolBar>
			</top>
			<center>
				<ScrollPane>
					<ListView fx:id="listView" minWidth="400" minHeight="400"/>
				</ScrollPane>
			</center>
		</BorderPane>
	</left>
	<center>
		<TabPane fx:id="tabPane" prefWidth="600"/>
	</center>
</fx:root>