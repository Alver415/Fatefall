<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.app.fx.view.console.ConsoleView?>
<?import com.alver.fatefall.app.fx.view.console.LogLevelRowFactory?>
<?import com.alver.fatefall.app.fx.view.console.MessageValueFactory?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<fx:root type="ConsoleView" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@ConsoleView.css"
         prefHeight="400.0" prefWidth="600.0">
        <rowFactory>
            <LogLevelRowFactory/>
        </rowFactory>
        <columns>
            <TableColumn text="Level" sortable="false" editable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="level"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Timestamp" sortable="false" editable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="instant"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Thread" sortable="false" editable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="threadName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Logger" sortable="false" editable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="loggerName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Message" sortable="false" editable="false">
                <cellValueFactory>
                    <MessageValueFactory/>
                </cellValueFactory>
                <!--							<cellValueFactory>-->
                <!--								<SelfValueFactory/>-->
                <!--							</cellValueFactory>-->
                <!--							<cellFactory>-->
                <!--								<ExpandableTableCellFactory/>-->
                <!--							</cellFactory>-->
            </TableColumn>
        </columns>

</fx:root>
