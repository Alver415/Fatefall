<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.templatebuilder.components.block.*?>
<Card xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      cardWidth="375" cardHeight="523">
    <front>
        <CardFace>
            <Block blendMode="SRC_ATOP">
                <Block blendMode="MULTIPLY" anchors="0">
                    <ImageBlock fx:id="first"
                                url="images/ccard.jpg"/>
                    <ImageBlock anchors="0"
                                style="-fx-background-color:linear-gradient(from 0% 0% to 50% 0%, white, transparent);"/>
                </Block>
                <Block blendMode="MULTIPLY" anchors="0">
                    <ImageBlock fx:id="second"
                                url="images/ccard.jpg"/>
                    <ImageBlock anchors="0"
                                style="-fx-background-color:linear-gradient(from 50% 0% to 100% 0%, transparent, white);"/>
                </Block>
            </Block>


            <TextBlock id="name" displayName="Card Name"
                       maxHeight="20" anchors="20, 30, 471, 30"/>

            <ImageBlock id="art" displayName="Card Art"
                        anchors="55, 30, 235, 30"/>

            <TextBlock id="type" displayName="Type"
                       anchors="290 30 -1 30"/>

            <TextBlock id="text" displayName="Rules Text"
                       anchors="330 30 45 30"
                       fontName="MPlantin"/>

            <TextBlock id="developer" displayName="Developer Credit"
                       anchors="-1 30 5 30"
                       maxHeight="20"
                       fontSize="12"
                       fontName="Beleren small caps Bold"
                       fontColor="white"/>

        </CardFace>
    </front>
    <back>
        <CardFace>
            <ImageBlock id="cardBack"
                        url="images/magic_card_back.png"
                        anchors="0"/>
        </CardFace>
    </back>
</Card>
