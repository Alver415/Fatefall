<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.alver.fatefall.data.entity">
	<class name="Entity" table="entities">
		<id name="id">
			<generator class="increment"/>
		</id>

		<map name="fields" cascade="all" lazy="false">
			<key column="parent_id"/>
			<map-key column="key" type="string"/>
			<one-to-many class="Entity"/>
		</map>

		<joined-subclass name="Workspace" table="workspaces">
			<key column="id"/>
			<property name="name"/>
			<set name="cards" table="workspace_cards" cascade="all-delete-orphan" lazy="false">
				<key column="workspace_id" />
				<one-to-many class="Card"/>
			</set>
		</joined-subclass>

		<joined-subclass name="Card" table="cards">
			<key column="id"/>
			<property name="name"/>
		</joined-subclass>

		<joined-subclass name="Field" table="fields">
			<key column="id"/>
			<property name="name"/>
			<property name="value"/>
		</joined-subclass>
	</class>


</hibernate-mapping>