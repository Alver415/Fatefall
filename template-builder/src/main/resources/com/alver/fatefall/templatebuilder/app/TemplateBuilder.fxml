<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.templatebuilder.app.TemplateBuilder?>
<?import com.alver.fatefall.templatebuilder.app.CardEditor?>
<?import com.alver.fatefall.templatebuilder.components.editor.file.FileSelectionField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import org.controlsfx.control.PropertySheet?>
<?import javafx.scene.shape.Rectangle?>
<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         type="Stage" fx:controller="com.alver.fatefall.templatebuilder.app.TemplateBuilder"
         title="Template Builder">
    <scene>
        <Scene>
            <BorderPane fx:id="borderPane">
                <top>
                    <MenuBar>
                        <Menu text="Context">
                            <MenuItem text="Open Context" onAction="#openPolyglotConsole"/>
                        </Menu>
                    </MenuBar>
                </top>
                <center>
                    <CardEditor fx:id="editor"/>
                </center>

                <left>
                    <VBox>
                        <FileSelectionField fx:id="templateSelector"
                                            text="../template-mtg/src/main/resources/com/alver/fatefall/template/mtg/MagicCard.fxml"/>
                        <PropertySheet fx:id="templateProperties"
                                       mode="CATEGORY"
                                       modeSwitcherVisible="false"
                                       VBox.vgrow="ALWAYS"/>
                    </VBox>
                </left>

                <right>
                    <VBox>
                        <FileSelectionField fx:id="cardSelector"
                                            text="./cards"/>
                        <PropertySheet fx:id="cardProperties"
                                       mode="NAME"
                                       modeSwitcherVisible="false"
                                       VBox.vgrow="ALWAYS"/>
                    </VBox>
                </right>
            </BorderPane>
        </Scene>
    </scene>
</fx:root>
