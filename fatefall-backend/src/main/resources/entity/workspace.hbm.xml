<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.alver.fatefall.data.entity">
	<class name="WorkspaceRow" table="workspace">
		<id name="id">
			<generator class="increment"/>
		</id>
		<property name="name" column="name" type="text" length="65535"/>
		<property name="data" column="data" type="text" length="65535"/>

		<list name="cards" cascade="all-delete-orphan" lazy="false">
			<key column="workspace_id"/>
			<index column="index"/>
			<one-to-many class="CardRow"/>
		</list>
	</class>
</hibernate-mapping>