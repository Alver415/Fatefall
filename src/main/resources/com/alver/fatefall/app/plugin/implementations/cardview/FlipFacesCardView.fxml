<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.app.plugin.implementations.cardview.CardFace?>
<?import com.alver.fatefall.app.plugin.implementations.cardview.FlipFacesCardView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="FlipFacesCardView"
         minWidth="250" minHeight="350"
         prefWidth="250" prefHeight="350"
         maxWidth="250" maxHeight="350">

    <StackPane fx:id="wrapper">
        <CardFace fx:id="backFace" prefWidth="250" prefHeight="350" maxWidth="250" maxHeight="350"/>
        <CardFace fx:id="frontFace" prefWidth="250" prefHeight="350" maxWidth="250" maxHeight="350"/>
    </StackPane>

    <Button StackPane.alignment="BOTTOM_LEFT" onAction="#spinLeft"/>
    <Button StackPane.alignment="BOTTOM_CENTER" onAction="#flip"/>
    <Button StackPane.alignment="BOTTOM_RIGHT" onAction="#spinRight"/>

</fx:root>
