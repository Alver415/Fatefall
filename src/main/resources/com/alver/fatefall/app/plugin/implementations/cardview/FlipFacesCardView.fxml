<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.app.plugin.implementations.cardview.CardFace?>
<?import com.alver.fatefall.app.plugin.implementations.cardview.FlipFacesCardView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="FlipFacesCardView">

    <StackPane fx:id="wrapper">
        <CardFace fx:id="backFace" visible="false"/>
        <CardFace fx:id="frontFace"/>
    </StackPane>

    <HBox fx:id="buttons" alignment="BOTTOM_CENTER" StackPane.alignment="BOTTOM_CENTER" maxHeight="20">
        <fx:define>
            <Image fx:id="spinLeftImage" url="com/alver/fatefall/app/plugin/implementations/cardview/spinLeft.png"/>
            <Image fx:id="flipImage" url="com/alver/fatefall/app/plugin/implementations/cardview/flip.png"/>
            <Image fx:id="spinRightImage" url="com/alver/fatefall/app/plugin/implementations/cardview/spinRight.png"/>
            <ImageView fx:id="spinLeftImageView" image="$spinLeftImage"
                       fitWidth="20" fitHeight="20"/>
            <ImageView fx:id="flipImageView" image="$flipImage"
                       fitWidth="20" fitHeight="20"/>
            <ImageView fx:id="spinRightImageView" image="$spinRightImage"
                       fitWidth="20" fitHeight="20"/>
        </fx:define>
        <Button onAction="#spinLeft" graphic="$spinLeftImageView"
                style="-fx-border-color: rgba(0, 0, 0, 0.2); -fx-background-color: rgba(255, 255, 255, 0.5);"/>
        <Button onAction="#flip" graphic="$flipImageView"
                style="-fx-border-color: rgba(0, 0, 0, 0.2); -fx-background-color: rgba(255, 255, 255, 0.5);"/>
        <Button onAction="#spinRight" graphic="$spinRightImageView"
                style="-fx-border-color: rgba(0, 0, 0, 0.2); -fx-background-color: rgba(255, 255, 255, 0.5);"/>
    </HBox>
</fx:root>
