<?xml version="1.0" encoding="UTF-8"?>


<?import com.alver.fatefall.fx.components.cardinfo.CardInfo?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.alver.fatefall.MainStageController"
            maxHeight="1000">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="New... "/>
                <MenuItem text="Save"/>
                <MenuItem text="Save All"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="Settings"/>
                <SeparatorMenuItem/>
                <MenuItem text="App Info"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <ScrollPane fitToHeight="true">
            <VBox>
                <ListView fx:id="collectionsList"/>
                <HBox>
                    <Button fx:id="createCollection" text="New Collection" onMouseClicked="#createCollection"/>
                    <Button fx:id="saveCollection" text="Save Collection" onMouseClicked="#saveCollection"/>
                    <Button fx:id="deleteCollection" text="Delete Collection" onMouseClicked="#deleteCollection"/>
                </HBox>
                <HBox>
                    <Button fx:id="addCard" text="Add Card to Collection" onMouseClicked="#addCard"/>
                    <Button fx:id="removeCard" text="Remove Card from Collection" onMouseClicked="#removeCard"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </left>
    <center>
        <TabPane fx:id="tabPane" prefWidth="1190" prefHeight="825"/>
    </center>
    <right>
        <CardInfo fx:id="cardInfo"/>
    </right>
</BorderPane>
