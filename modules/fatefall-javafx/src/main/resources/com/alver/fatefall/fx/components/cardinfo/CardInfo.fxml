<?xml version="1.0" encoding="UTF-8"?>

<?import com.alver.fatefall.fx.components.cardview.CardView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.alver415.javafx.scene.control.input.*?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.alver.fatefall.fx.components.cardinfo.CardInfo">
    <CardView fx:id="cardView"/>
    <ScrollPane hbarPolicy="NEVER" vbarPolicy="NEVER">
        <VBox fx:id="cardFields">
            <InputTextField fx:id="name" labelText="Card Name"/>
            <InputTextField fx:id="manaCost" labelText="Cost"/>
            <InputTextField fx:id="typeLine" labelText="Type"/>
            <InputTextField fx:id="power" labelText="Power"/>
            <InputTextField fx:id="toughness" labelText="Toughness"/>
        </VBox>
    </ScrollPane>
    <HBox>
        <Button fx:id="saveButton" text="Save"/>
        <Button fx:id="generateButton" text="Generate"/>
    </HBox>
</fx:root>
