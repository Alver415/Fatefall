<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.alver.fatefall.api.base.implementation.ModifiableCard" table="CARD">
        <id name="pk" type="long" column="pk">
            <generator class="native"/>
        </id>

        <property name="id" column="id" type="uuid-binary" access="field"/>
        <property name="name" column="name" type="string" access="field"/>
        <property name="oracleId" column="oracleId" type="uuid-binary" access="field"/>
        <property name="mtgoId" column="mtgoId" type="integer" access="field"/>
        <property name="arenaId" column="arenaId" type="integer" access="field"/>
        <property name="mtgoFoilId" column="mtgoFoilId" type="integer" access="field"/>
        <property name="uri" column="uri" type="string" access="field"/>
        <property name="scryfallUri" column="scryfallUri" type="string" access="field"/>
        <property name="printsSearchUri" column="printsSearchUri" type="string" access="field"/>
        <property name="rulingsUri" column="rulingsUri" type="string" access="field"/>
        <property name="layout" column="layout" type="com.alver.scryfall.api.models.Layouts" access="field"/>
        <property name="cmc" column="cmc" type="string" access="field"/>
        <property name="typeLine" column="typeLine" type="string" access="field"/>
        <property name="oracleText" column="oracleText" type="string" access="field"/>
        <property name="manaCost" column="manaCost" type="string" access="field"/>
        <property name="power" column="power" type="string" access="field"/>
        <property name="toughness" column="toughness" type="string" access="field"/>
        <property name="loyalty" column="loyalty" type="string" access="field"/>
        <property name="lifeModifier" column="lifeModifier" type="string" access="field"/>
        <property name="handModifier" column="handModifier" type="string" access="field"/>
        <property name="reserved" column="reserved" type="boolean" access="field"/>
        <property name="edhrecRank" column="edhrecRank" type="integer" access="field"/>
        <property name="setCode" column="setCode" type="string" access="field"/>
        <property name="setName" column="setName" type="string" access="field"/>
        <property name="collectorNumber" column="collectorNumber" type="string" access="field"/>
        <property name="setSearchUri" column="setSearchUri" type="string" access="field"/>
        <property name="scryfallSetUri" column="scryfallSetUri" type="string" access="field"/>
        <property name="highresImage" column="highresImage" type="boolean" access="field"/>
        <property name="reprint" column="reprint" type="boolean" access="field"/>
        <property name="digital" column="digital" type="boolean" access="field"/>
        <property name="rarity" column="rarity" type="com.alver.scryfall.api.models.Rarity" access="field"/>
        <property name="flavorText" column="flavorText" type="string" access="field"/>
        <property name="artist" column="artist" type="string" access="field"/>
        <property name="illustrationId" column="illustrationId" type="uuid-binary" access="field"/>
        <property name="frame" column="frame" type="string" access="field"/>
        <property name="fullArt" column="fullArt" type="boolean" access="field"/>
        <property name="watermark" column="watermark" type="string" access="field"/>
        <property name="borderColor" column="borderColor" type="com.alver.scryfall.api.models.BorderColors"
                  access="field"/>
        <property name="storySpotlightNumber" column="storySpotlightNumber" type="integer" access="field"/>
        <property name="storySpotlightUri" column="storySpotlightUri" type="string" access="field"/>
        <property name="timeshifted" column="timeshifted" type="boolean" access="field"/>
        <property name="colorshifted" column="colorshifted" type="boolean" access="field"/>
        <property name="futureshifted" column="futureshifted" type="boolean" access="field"/>

        <one-to-one name="legalities" foreign-key="card_pk" class="com.alver.scryfall.api.models.Legality"
                    access="field"/>
        <one-to-one name="imageUris" foreign-key="card_pk" class="com.alver.scryfall.api.models.ImageUri"
                    access="field"/>

        <list name="multiverseIds" table="multiverseIds" cascade="all" access="field">
            <key>
                <column name="multiverseId" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <element type="integer"/>
        </list>

        <list name="colors" table="colors" cascade="all" access="field">
            <key>
                <column name="color" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <element type="com.alver.scryfall.api.models.Colors"/>
        </list>

        <list name="colorIndicator" table="colorIndicator" cascade="all" access="field">
            <key>
                <column name="colorIndicator" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <element type="com.alver.scryfall.api.models.Colors"/>
        </list>

        <list name="colorIdentity" table="colorIdentity" cascade="all" access="field">
            <key>
                <column name="colorIdentity" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <element type="com.alver.scryfall.api.models.Colors"/>
        </list>

        <list name="allParts" table="allParts" cascade="all" access="field">
            <key>
                <column name="allParts" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <one-to-many class="com.alver.scryfall.api.models.CardFace"/>
        </list>

        <list name="cardFaces" table="cardFaces" cascade="all" access="field">
            <key>
                <column name="cardFaces" not-null="true"/>
            </key>
            <list-index column="idx"/>
            <one-to-many class="com.alver.scryfall.api.models.CardFace"/>
        </list>

        <map name="purchaseUris" table="purchaseUris" cascade="all" access="field">
            <key column="card_pk"/>
            <index column="key" type="string"/>
            <element column="value" type="string"/>
        </map>

        <map name="relatedUris" table="relatedUris" cascade="all" access="field">
            <key column="card_pk"/>
            <index column="key" type="string"/>
            <element column="value" type="string"/>
        </map>

    </class>
</hibernate-mapping>