<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import com.alver.fatefall.app.fx.components.cardinfo.CardInfo?>
<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="BorderPane" fx:controller="com.alver.fatefall.app.fx.components.cardcollection.CardGridPane">
    <top>
        <TextField fx:id="searchInput" promptText="Search for Magic cards..." BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <ScrollPane fitToWidth="true" prefHeight="825" prefWidth="1220" vbarPolicy="NEVER" hbarPolicy="NEVER">
            <GridPane fx:id="gridPane" hgap="5.0" vgap="5.0" >
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </GridPane>
        </ScrollPane>
    </center>
    <right>
        <CardInfo fx:id="cardInfo"/>
    </right>
</fx:root>
